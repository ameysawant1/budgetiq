
# BudgetIQ Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_URI=mongodb://127.0.0.1:27017/budgetiq?retryWrites=true&w=majority
MONGO_DB_NAME=budgetiq
DATABASE_URL=mongodb://127.0.0.1:27017/budgetiq

# App Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# Authentication Secrets (Generate new secure random strings for production)
JWT_SECRET=your_secure_jwt_secret_here_generate_random_64_chars
NEXTAUTH_SECRET=your_secure_nextauth_secret_here_generate_random_64_chars
SESSION_SECRET=your_secure_session_secret_here_generate_random_64_chars

# Upload and OCR Settings
MAX_UPLOAD_SIZE=10485760
OCR_SYNC_TIMEOUT_MS=10000

# Optional External Services (leave empty if not using)
STRIPE_SECRET_KEY=
MAILER_DSN=
